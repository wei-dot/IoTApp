<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IoTApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/background_toolbar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color-->
        <item name="android:navigationBarColor">@color/background_bottom</item>
        <!--Toolbar style-->
        <item name="actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>

    </style>

    <style name="Theme.IoTApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_no_notice</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"test"</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="Theme.IoTApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IoTApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuTextStyle">
        <item name="android:actionMenuTextColor">@color/stroke</item>
        <item name="itemTextColor">@color/stroke</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--        Set that the nav buttons will animate -->
        <item name="spinBars">true</item>
        <!--       Set the bar length -->
        <item name="barLength">64dp</item>
        <!--        Set the space between the hamburger button bars -->
        <item name="gapBetweenBars">10dp</item>
        <!--        Set the thickness of the bar -->
        <item name="thickness">@dimen/half_default_gap</item>
        <!--        Set the color of the toggle button -->
        <item name="color">@color/login_brown</item>

        <!-- Here's how you increase the size of the back arrow icon. -->
        <!--        <item name="arrowHeadLength">@dimen/one_and_half_default_gap</item>-->
        <!--        <item name="arrowShaftLength">10dp</item>-->
    </style>


</resources>