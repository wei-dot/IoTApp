<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/family_item_box"
        android:layout_width="236dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_family_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/family_name"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="3dp"
        android:gravity="top"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.6sp"
        android:textAppearance="@style/text_family_item_style"
        app:layout_constraintBottom_toBottomOf="@+id/family_item_box"
        app:layout_constraintEnd_toEndOf="@+id/family_item_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/now_family"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="112dp"
        android:background="@drawable/ic_admin"
        app:layout_constraintBottom_toBottomOf="@+id/family_name"
        app:layout_constraintEnd_toEndOf="@+id/family_item_box"
        app:layout_constraintStart_toEndOf="@+id/family_name"
        app:layout_constraintTop_toTopOf="@+id/family_name"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>