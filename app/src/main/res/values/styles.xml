<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_title_style">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.7</item>
        <item name="android:textColor">@color/text_login</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.36</item>
        <item name="android:textColor">@color/background_content</item>
    </style>

    <style name="send_verification_code_button">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.33</item>
        <item name="android:textColor">#868585</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/opening_anim</item>
        <item name="android:windowExitAnimation">@anim/closing_anim</item>
    </style>
</resources>