<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IoTApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/color_86ccdb</item>
        <item name="colorOnPrimary">@color/color_86ccdb</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/color_86ccdb</item>
        <item name="colorOnSecondary">@color/color_86ccdb</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color-->
        <item name="android:navigationBarColor">@color/color_fbfbfb</item>
    </style>

    <style name="Theme.IoTApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IoTApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IoTApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Customize Your Style -->


    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowSplashScreenBackground">@color/color_FDF5E1</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_FDF5E1</item>
        <!-- Navigation bar color-->
        <item name="android:navigationBarColor">@color/color_FDF5E1</item>
        <item name="postSplashScreenTheme">@style/SplashTheme</item>
    </style>

</resources>