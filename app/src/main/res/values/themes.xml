<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IoTApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_86ccdb</item>
        <item name="colorPrimaryVariant">@color/color_86ccdb</item>
        <item name="colorOnPrimary">@color/color_86ccdb</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_86ccdb</item>
        <item name="colorSecondaryVariant">@color/color_86ccdb</item>
        <item name="colorOnSecondary">@color/color_86ccdb</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color-->
        <item name="android:navigationBarColor">@color/color_fbfbfb</item>
    </style>

    <style name="Theme.IoTApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="Theme.IoTApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IoTApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Customize Your Style -->

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <!--       Set the bar length -->
        <item name="barLength">32dp</item>
        <!--        Set the space between the hamburger button bars -->
        <item name="gapBetweenBars">7dp</item>
        <!--        Set the thickness of the bar -->
        <item name="thickness">@dimen/hamburger_gap</item>
        <!--        Set the color of the toggle button -->
        <item name="color">@color/color_faf0dd</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>