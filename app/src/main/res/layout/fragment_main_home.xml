            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:textSize="20sp"
                app:cardBackgroundColor="@color/color_faf0dd"
                app:cardCornerRadius="10dp"
                app:cardElevation="0px"
                app:cardUseCompatPadding="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_fan_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:letterSpacing="1"
                        android:lineSpacingMultiplier="2"
                        android:padding="10dp"
                        android:text="@string/fan_switch"
                        android:textColor="@color/color_c07a27"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout_fan"
                        android:layout_width="match_parent"
                        android:layout_height="244dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_fan_switch">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/fan_switch"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:background="@drawable/btn_fan_power"
                            android:checked="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.135"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.496"
                            app:thumbTint="@color/color_c07a27"
                            app:trackTint="@color/color_cda16d" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/fan_light"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:background="@drawable/btn_fan_light"
                            android:checked="true"
                            app:layout_constraintBottom_toBottomOf="@+id/fan_switch"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.27"
