                        app:layout_constraintVertical_bias="0.2" />

                    <TextView
                        android:id="@+id/MinT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/ic_weather"
                        android:layout_alignEnd="@+id/ic_weather"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="12dp"
                        android:text="MinT"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/ic_weather"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/ic_weather"
                        app:layout_constraintTop_toBottomOf="@+id/ic_weather"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="~"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/MinT"
                        app:layout_constraintEnd_toStartOf="@+id/MaxT"
                        app:layout_constraintStart_toEndOf="@+id/MinT"
                        app:layout_constraintTop_toTopOf="@+id/MinT" />

                    <TextView
                        android:id="@+id/MaxT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/ic_weather"
                        android:layout_alignEnd="@+id/ic_weather"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="12dp"
                        android:text="MaxT"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/MinT"
                        app:layout_constraintEnd_toEndOf="@+id/ic_weather"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/MinT"
                        app:layout_constraintTop_toTopOf="@+id/MinT"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather"
                        android:textColor="@color/color_c07a27"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ic_weather"
                        app:layout_constraintTop_toTopOf="@+id/ic_weather" />

                    <TextView
                        android:id="@+id/pop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/rain_probability"
                        android:textColor="@color/color_c07a27"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toEndOf="@+id/ic_weather"
                        app:layout_constraintTop_toBottomOf="@+id/wx" />

                    <TextView
                        android:id="@+id/textUpdateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/update_time"
                        android:textColor="@color/color_cda16d"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/text_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="@string/weather_source"
                        android:textColor="@color/color_cda16d"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toTopOf="@+id/textUpdateTime"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="421dp"
                android:layout_margin="20dp"
                android:textSize="20sp"
                app:cardBackgroundColor="@color/color_faf0dd"
                app:cardCornerRadius="10dp"
                app:cardElevation="0px"
                app:cardUseCompatPadding="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:letterSpacing="1"
                        android:lineSpacingMultiplier="2"
                        android:padding="10dp"
                        android:text="@string/text_tplink_switch"
                        android:textColor="@color/color_c07a27"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/tplink_switch1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="35dp"
                            android:checked="true"
                            android:textColor="@color/color_c07a27"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:thumbTint="@color/color_c07a27"
                            app:trackTint="@color/color_cda16d" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageView_power_plugs1"
                            android:layout_width="53dp"
                            android:layout_height="41dp"
                            android:layout_marginStart="24dp"
                            android:src="@drawable/power_plugs_logo_on"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageView_power_plugs2"
                            android:layout_width="53dp"
                            android:layout_height="41dp"
                            android:layout_marginStart="24dp"

                            android:src="@drawable/power_plugs_logo_on"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/tplink_switch2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="35dp"
                            android:checked="true"
                            android:textColor="@color/color_c07a27"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:thumbTint="@color/color_c07a27"
                            app:trackTint="@color/color_cda16d" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout4"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageView_power_plugs3"
                            android:layout_width="53dp"
                            android:layout_height="41dp"
                            android:layout_marginStart="24dp"
                            android:src="@drawable/power_plugs_logo_on"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/tplink_switch3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="35dp"
                            android:checked="true"
                            android:textColor="@color/color_c07a27"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:thumbTint="@color/color_c07a27"
                            app:trackTint="@color/color_cda16d" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout3"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageView_power_plugs4"
                            android:layout_width="53dp"
                            android:layout_height="41dp"
                            android:layout_marginStart="24dp"
                            android:src="@drawable/power_plugs_logo_on"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/tplink_switch4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="35dp"
                            android:checked="true"
                            android:textColor="@color/color_c07a27"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:thumbTint="@color/color_c07a27"
                            app:trackTint="@color/color_cda16d" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout5"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageView_power_plugs5"
                            android:layout_width="53dp"
                            android:layout_height="41dp"
                            android:layout_marginStart="24dp"
                            android:src="@drawable/power_plugs_logo_on"
                            app:layout_constraintBottom_toBottomOf="parent"
